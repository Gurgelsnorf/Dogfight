; Vad ska ritas på vår canvas?
(define (render-fn canvas dc)
(send dc set-brush "red" 'solid) ; Ändrar färg på vår pensel
(send dc set-pen "green" 10 'solid) ; Ändrar färg på vår penna
(send dc set-text-foreground "blue") ; Ändrar färg på vår text
(send dc draw-rectangle 10 10 50 50)
(send dc draw-text "Hallå där!" 200 200)
(send dc set-brush (make-object color% 1 0 0) 'solid) ; Vi skapar en egen färg istället!
(send dc draw-ellipse 240 240 100 100))
; Skapar vår canvas
(define *a-canvas* (new canvas%
[parent *a-window*]
[paint-callback render-fn]))
